FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1

# Banco de dados
DATABASE_URL=sqlite:///db.sqlite3

# Segurança
SECRET_KEY=django-insecure-chave-super-secreta-temporaria
SECURITY_PASSWORD_SALT=salt-super-secreto

# Email (configuração local para desenvolvimento)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=admin
EMAIL_HOST_PASSWORD=admin
DEFAULT_FROM_EMAIL=noreply@erpninja.com

# Upload de arquivos
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB em bytes
MAX_UPLOAD_SIZE=5242880  # 5MB em bytes

# Cache
CACHE_ENABLED=True
REDIS_URL=redis://localhost:6379/0 